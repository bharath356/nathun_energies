{
  "name": "call-management-backend",
  "version": "1.0.0",
  "description": "Serverless backend for call management system",
  "main": "handler.js",
  "scripts": {
    "dev": "export $(grep -v '^#' .env | grep -v '^$' | xargs) && serverless offline start --httpPort 3001",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "dynamodb:start": "export $(grep -v '^#' .env | grep -v '^$' | xargs) && serverless dynamodb start",
    "dynamodb:install": "serverless dynamodb install",
    "dynamodb:create-tables": "node create-tables.js",
    "dynamodb:seed": "node seed-data.js",
    "client:create-tables": "node create-client-tables.js",
    "client:seed": "node seed-client-data.js",
    "setup:complete": "npm run dynamodb:create-tables && npm run client:create-tables && npm run dynamodb:seed && npm run client:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "logs": "serverless logs -f",
    "remove": "serverless remove",
    "build": "tsc",
    "build:prod": "tsc && webpack",
    "package": "npm run build:prod && mkdir -p dist && cp -r node_modules dist/ && cp package.json dist/ && cd dist && zip -r ../backend-deployment.zip .",
    "express:dev": "ts-node -r tsconfig-paths/register src/local.ts"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "aws-sdk": "^2.1490.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "serverless-http": "^3.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/aws-sdk": "^0.0.42",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "serverless": "^3.38.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^13.3.0",
    "serverless-webpack": "^5.13.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "dynamodb"
  ],
  "author": "",
  "license": "MIT"
}
